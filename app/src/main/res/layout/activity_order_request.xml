<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.OrderRequestActivity">

    <RelativeLayout
        android:id="@+id/rL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/lin_lay_black">
    <TextView
        android:id="@+id/textView26"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Order Request"
        android:layout_margin="5dp"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.01999998" />

    <Button
        android:id="@+id/inProgrees_btn"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:text="Dalam Proses"
        android:layout_below="@id/textView26"
        android:textColor="@color/white"
        android:background="@drawable/bt_frag"/>
    <Button
        android:id="@+id/selesai_btn"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:text="Selesai"
        android:layout_toRightOf="@+id/inProgrees_btn"
        android:layout_below="@id/textView26"
        android:textColor="@color/white"
        android:background="@drawable/bt_fragr"/>
    </RelativeLayout>
    <FrameLayout
        android:id="@+id/frame_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rL"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

</RelativeLayout>